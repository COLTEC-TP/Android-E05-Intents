<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_photo"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_photo"
        android:layout_alignTop="@id/img_photo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/txt_name"
        android:textColor="@color/black"
        android:text="Nome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_name"
        android:layout_below="@id/txt_name"
        android:id="@+id/txt_email"
        android:textColor="@color/black"
        android:text="email" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_photo"
        android:layout_alignStart="@id/txt_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="(00) 00000-0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/img_photo"
        android:id="@+id/txt_age"
        android:textColor="@color/black"
        android:text="40 anos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_barcode"
        android:text="Ler cÃ³digo de barras"
        android:textColor="@color/black"
        android:backgroundTint="@color/android_green"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_photo"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_barcode"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_barcode"
        android:layout_marginTop="40dp" />

</RelativeLayout>